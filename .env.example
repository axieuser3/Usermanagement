# ============================================================================
# AXIE STUDIO USER MANAGEMENT - ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control
# ============================================================================

# ============================================================================
# SUPABASE CONFIGURATION
# ============================================================================
# Get these from your Supabase project dashboard
# Go to: Settings > API > Project URL and Project API keys

VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your-anon-key-here

# ============================================================================
# STRIPE CONFIGURATION
# ============================================================================
# Get these from your Stripe dashboard
# Go to: Developers > API keys

# Stripe Publishable Key (starts with pk_test_ or pk_live_)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# ============================================================================
# OPTIONAL: ADMIN CONFIGURATION
# ============================================================================
# Super Admin User ID (UUID) - This user cannot be deleted
# Default is set in the database migration, but you can override here
VITE_ADMIN_USER_ID=b8782453-a343-4301-a947-67c5bb407d2b

# ============================================================================
# DEVELOPMENT CONFIGURATION
# ============================================================================
# These are optional and have sensible defaults

# Development mode (true/false)
VITE_DEV_MODE=true

# API Base URL (usually your Supabase URL + /rest/v1)
VITE_API_BASE_URL=https://your-project-id.supabase.co/rest/v1

